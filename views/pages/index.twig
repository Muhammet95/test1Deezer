{% extends 'layouts/app.twig' %}

{% block body %}
    <div style="display: flex; justify-content: center; align-content: center; height: 100vh;">
        <div style="display: flex; flex-direction: column; gap: 20px; align-items: center;">
            <div style='font-size: 30px; font-weight: bold;'>SazLab</div>
            <div style="display: flex; gap: 20px; align-items: center; flex-wrap: wrap; justify-content: center;">
                <div id="playlist" style="width: 300px;height: 300px; border: 1px solid lightgrey; border-radius: 5px; box-shadow: 0 0 0 1px lightgrey; overflow: scroll;">

                </div>
                <div style="width: 300px;height: 300px; overflow: hidden; border-radius: 10px; position: relative;">
                    <img src="/img/artik&asti.jpeg" alt="" style="width: 100%;">
                    <div style="position: absolute; bottom: 0; width: calc(100% - 10px); background: rgba(255, 255, 255, 0.7); padding: 0 5px;">
                        <div id="progress_area" style="width: calc(100% - 15px); margin: 10px 7.5px; background-color: rgb(100, 100, 100); height: 5px; position: relative; border-radius: 5px;">
                            <div id="completed" style="position: absolute; display: none; width: 0%; background-color: rgb(20, 20, 20); height: 5px;border-radius: 5px;"></div>
                            <div id="pointer" style="position: absolute; display: none; width: 20px; height: 20px; border-radius: 50%; background-color: rgb(0, 0, 0);left: calc(0% - 10px); top: -7.5px;"></div>
                        </div>
                        <div style="display: flex; align-items: center; padding: 10px 0; gap: 5px;">
                            <img id="prev" src="/assets/img/skip_previous.svg" alt="" style="width: 40px; border: 1px solid black; border-radius: 2px; cursor:pointer;">
                            <img id="play" src="/assets/img/play_pause.svg" alt="" style="width: 40px; border: 1px solid black; border-radius: 2px; cursor:pointer;">
                            <img id="next" src="/assets/img/skip_next.svg" alt="" style="width: 40px; border: 1px solid black; border-radius: 2px; cursor:pointer;">
                            <div style="display: flex; flex-direction: column; align-items: center; gap: 5px; width: 100%;" id="player">
                                <span class="artist"></span>
                                <span class="track"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}